{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "outDir": "dist",
      "rootDir": ".",
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["../shared/*"]
      },
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["./**/*.ts", "../shared/**/*.ts"],
    "exclude": [
      "../vite.config.ts",
      "../vite.config.frontend.ts",
      "../vite.ts", // this is likely for dev only
      "../client", // if any frontend lives here
      "**/*.test.ts"
    ]
  }
  