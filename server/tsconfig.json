{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["../shared/*"]
      },
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "outDir": "dist",
      "rootDir": ".",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["./**/*.ts", "../shared/**/*.ts"],
    "exclude": ["../vite.config.ts", "../vite.config.frontend.ts"]
  }
  