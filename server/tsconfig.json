{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "allowJs": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@/*": ["../client/src/*"],
        "@shared/*": ["../shared/*"],
        "@assets/*": ["../attached_assets/*"]
      },
      "types": ["node"]
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  