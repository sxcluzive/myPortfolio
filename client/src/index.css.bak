@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;700&display=swap');
@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --background: hsl(0, 0%, 8%);
  --foreground: hsl(120, 100%, 70%);
  --muted: hsl(0, 0%, 12%);
  --muted-foreground: hsl(0, 0%, 45.1%);
  --popover: hsl(0, 0%, 12%);
  --popover-foreground: hsl(120, 100%, 70%);
  --card: hsl(0, 0%, 12%);
  --card-foreground: hsl(120, 100%, 70%);
  --border: hsl(0, 0%, 25%);
  --input: hsl(0, 0%, 25%);
  --primary: hsl(120, 100%, 70%);
  --primary-foreground: hsl(0, 0%, 8%);
  --secondary: hsl(0, 0%, 12%);
  --secondary-foreground: hsl(120, 100%, 70%);
  --accent: hsl(0, 0%, 12%);
  --accent-foreground: hsl(120, 100%, 70%);
  --destructive: hsl(0, 84.2%, 60.2%);
  --destructive-foreground: hsl(0, 0%, 98%);
  --ring: hsl(120, 100%, 70%);
  --radius: 0.5rem;
  --matrix: hsl(120, 100%, 70%);
  --matrix-dark: hsl(120, 100%, 60%);
  --terminal-bg: hsl(0, 0%, 8%);
  --terminal-gray: hsl(0, 0%, 12%);
  --terminal-border: hsl(0, 0%, 25%);
  --cyan-glow: hsl(180, 100%, 50%);
  --amber-glow: hsl(45, 100%, 50%);
  --red-glow: hsl(0, 100%, 62%);
}

.dark {
  --background: hsl(0, 0%, 8%);
  --foreground: hsl(120, 100%, 70%);
  --muted: hsl(0, 0%, 12%);
  --muted-foreground: hsl(0, 0%, 45.1%);
  --popover: hsl(0, 0%, 12%);
  --popover-foreground: hsl(120, 100%, 70%);
  --card: hsl(0, 0%, 12%);
  --card-foreground: hsl(120, 100%, 70%);
  --border: hsl(0, 0%, 25%);
  --input: hsl(0, 0%, 25%);
  --primary: hsl(120, 100%, 70%);
  --primary-foreground: hsl(0, 0%, 8%);
  --secondary: hsl(0, 0%, 12%);
  --secondary-foreground: hsl(120, 100%, 70%);
  --accent: hsl(0, 0%, 12%);
  --accent-foreground: hsl(120, 100%, 70%);
  --destructive: hsl(0, 84.2%, 60.2%);
  --destructive-foreground: hsl(0, 0%, 98%);
  --ring: hsl(120, 100%, 70%);
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply font-mono antialiased bg-terminal-bg text-matrix overflow-x-hidden;
    font-family: 'JetBrains Mono', 'Fira Code', 'Source Code Pro', monospace;
  }
}

@layer utilities {
  .matrix {
    color: var(--matrix);
  }
  
  .matrix-dark {
    color: var(--matrix-dark);
  }
  
  .terminal-bg {
    background-color: var(--terminal-bg);
  }
  
  .terminal-gray {
    background-color: var(--terminal-gray);
  }
  
  .terminal-border {
    border-color: var(--terminal-border);
  }
  
  .cyan-glow {
    color: var(--cyan-glow);
  }
  
  .amber-glow {
    color: var(--amber-glow);
  }
  
  .red-glow {
    color: var(--red-glow);
  }

  .terminal-cursor::after {
    content: 'â–ˆ';
    animation: blink 1s infinite;
  }

  .code-line {
    border-left: 2px solid var(--terminal-border);
    padding-left: 12px;
  }

  .syntax-keyword { 
    color: hsl(326, 100%, 74%); 
  }
  
  .syntax-string { 
    color: hsl(65, 92%, 76%); 
  }
  
  .syntax-comment { 
    color: hsl(225, 27%, 51%); 
  }
  
  .syntax-function { 
    color: hsl(135, 94%, 65%); 
  }

  .syntax-decorator {
    color: hsl(45, 100%, 60%);
  }

  .syntax-number {
    color: hsl(200, 100%, 70%);
  }

  .syntax-builtin {
    color: hsl(280, 100%, 75%);
  }

  .syntax-self {
    color: hsl(15, 100%, 65%);
  }

  .matrix-bg {
    background: linear-gradient(to bottom, hsl(0, 0%, 8%) 0%, hsl(120, 100%, 5%) 100%);
  }

  .glow-matrix {
    box-shadow: 0 0 5px var(--matrix);
    transition: box-shadow 0.3s ease;
  }

  .glow-matrix:hover {
    box-shadow: 0 0 20px var(--matrix), 0 0 30px var(--matrix);
  }

  .glow-cyan {
    box-shadow: 0 0 5px var(--cyan-glow);
  }

  .glow-amber {
    box-shadow: 0 0 5px var(--amber-glow);
  }

  .matrix-rain {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    opacity: 0.1;
    z-index: 0;
    background: linear-gradient(to bottom, transparent 0%, var(--matrix) 50%, transparent 100%);
    animation: matrix-rain 20s linear infinite;
  }
}

@keyframes blink {
  0%, 50% { 
    opacity: 1; 
  }
  51%, 100% { 
    opacity: 0; 
  }
}

@keyframes matrix-rain {
  0% { 
    transform: translateY(-100vh); 
  }
  100% { 
    transform: translateY(100vh); 
  }
}

@keyframes glow {
  0% { 
    box-shadow: 0 0 5px var(--matrix); 
  }
  100% { 
    box-shadow: 0 0 20px var(--matrix), 0 0 30px var(--matrix); 
  }
}

/* Scrollbar styling */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: var(--terminal-bg);
}

::-webkit-scrollbar-thumb {
  background: var(--terminal-border);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--matrix);
}
